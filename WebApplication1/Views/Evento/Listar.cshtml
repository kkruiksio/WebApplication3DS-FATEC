@model IEnumerable<WebApplication1.Models.Evento>

@{
    ViewBag.Title = "Listar";
}

<h2>Lista de Eventos</h2>


@Html.ActionLink("Cadastrar Novo Evento", "Create", null, new { @class= "btn btn-outline-success" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Local)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Local)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = Model.ToList<WebApplication1.Models.Evento>().IndexOf(item) }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Detalhes", "Exibir", new { id = Model.ToList<WebApplication1.Models.Evento>().IndexOf(item) }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Remover", "Delete", new { id = Model.ToList<WebApplication1.Models.Evento>().IndexOf(item) }, new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>
